# Database Configuration (REQUIRED for project management features)
DATABASE_URL="postgresql://user:password@localhost:5432/fulling"

# NextAuth Configuration (REQUIRED for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-required-here"
AUTH_TRUST_HOST="true"

# === AUTHENTICATION MODE (choose one) ===

# DISABLED MODE (fastest for development/testing - NO AUTH REQUIRED)
# Set AUTH_MODE=disabled to completely bypass authentication
# The app will auto-authenticate as a default owner user
# WARNING: Do not use in production with sensitive data
# AUTH_MODE="disabled"
# SINGLE_USER_EMAIL="owner@example.com"  # Optional: email for the default user

# SINGLE-USER MODE (default, production-recommended)
# Set AUTH_MODE=single_user or leave unset (defaults to single_user)
# Only ONE admin user can sign in, no database required for auth
AUTH_MODE="single_user"
ENABLE_PASSWORD_AUTH="true"
ENABLE_GITHUB_AUTH="false"
ADMIN_USERNAME="your-admin-username"
ADMIN_PASSWORD_HASH=""  # Generate with: node scripts/hash-password.cjs "YourPassword"

# MULTI-USER MODE (development/testing only)
# Set AUTH_MODE=multi_user to enable GitHub OAuth and multi-user support
# AUTH_MODE="multi_user"
# ENABLE_PASSWORD_AUTH="true"
# ENABLE_GITHUB_AUTH="true"

# GitHub OAuth (optional - required only if ENABLE_GITHUB_AUTH=true in multi-user mode)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Sealos OAuth (optional - required only if ENABLE_SEALOS_AUTH=true)
SEALOS_JWT_SECRET=""
ENABLE_SEALOS_AUTH="false"

# Job Configuration (optional)
DATABASE_LOCK_DURATION_SECONDS="5"
MAX_DATABASES_PER_RECONCILE="10"
SANDBOX_LOCK_DURATION_SECONDS="5"
MAX_SANDBOXES_PER_RECONCILE="10"

# Kubernetes Configuration (optional)
RUNTIME_IMAGE=""

# AI/LLM Configuration (optional)
AIPROXY_ENDPOINT=""
ANTHROPIC_BASE_URL=""
ANTHROPIC_SMALL_FAST_MODEL=""
ANTHROPIC_MODEL=""

# Logging (optional)
LOG_LEVEL="info"

# Clerk Auth (optional - for client-side auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""

# Development/Build (optional)
SKIP_ENV_VALIDATION=""
